<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >



    <TextView
        android:id="@+id/luid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lgrant"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp"
        android:text="TextView"
        />

    <Button
        android:id="@+id/lgrant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/luname"
        android:layout_marginEnd="20dp"
        android:text="@string/grant"
        android:textColor="@color/red"
        android:background="@color/white"
        android:textSize="@dimen/sp_twenty"/>

    <TextView
        android:id="@+id/luname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/luid"
        android:layout_marginTop="30dp"
        android:text="TextView"
        android:textSize="@dimen/sp_eighteen"/>
</RelativeLayout>